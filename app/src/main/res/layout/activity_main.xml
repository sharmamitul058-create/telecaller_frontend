<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA">

    <!-- MAIN CONTENT -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TOOLBAR -->


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:title="Dashboard"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_menu"
            app:layout_constraintTop_toTopOf="parent" />



        <!-- DASHBOARD CONTENT -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintVertical_bias="1.0">


            <androidx.cardview.widget.CardView

                android:id="@+id/cardFresh"
                android:layout_width="311dp"
                android:layout_height="105dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#1E88E5"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:text="Fresh Leads"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardContacted"
                android:layout_width="317dp"
                android:layout_height="98dp"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#1E88E5"
                app:cardCornerRadius="16dp"

                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.562"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardFresh">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:text="Contacted Leads"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cardBackgroundColor="#1E88E5"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardInterested"
                android:layout_width="322dp"
                android:layout_height="102dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#1E88E5"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardContacted">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Interested Leads"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvQuickActions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:text="Quick Actions"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardInterested" />

            <LinearLayout
                android:id="@+id/layoutQuickActions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvQuickActions">

                <!-- Action 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_blue"
                        android:padding="12dp"
                        android:src="@android:drawable/ic_menu_call"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Start Dialing"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Action 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_light"
                        android:padding="12dp"
                        android:src="@android:drawable/ic_menu_add"
                        app:tint="#1E88E5" />

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Add Lead"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Action 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_light"
                        android:padding="12dp"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="#1E88E5" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="View Script"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Action 4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_light"
                        android:padding="12dp"
                        android:src="@android:drawable/ic_menu_my_calendar" />

                    <TextView
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Tasks"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
            <!-- RECENT ACTIVITY TITLE -->
            <TextView
                android:id="@+id/tvRecentActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Recent Activity"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutQuickActions" />

            <TextView
                android:id="@+id/tvViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="#1E88E5"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvRecentActivity"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- RECENT ACTIVITY LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRecentActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRecentActivity" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- CUSTOM DRAWER -->
    <LinearLayout
        android:id="@+id/customDrawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@android:drawable/sym_def_app_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sarah Jenkins"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Profile"
                android:textSize="12sp"
                android:textColor="#2196F3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Accepting Calls" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


        <!-- BOTTOM ACTIONS -->
        <TextView
            android:id="@+id/menuSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="16sp"
            android:padding="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/menuAllLeads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Leads"
            android:textSize="16sp"
            android:padding="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />
        <TextView
            android:id="@+id/menuCampaigns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Campaigns"
            android:padding="16dp"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/menuTemplates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message Templates"
            android:padding="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/menuDonation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donation Form"
            android:padding="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/menuPrasadam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prasadam Form"
            android:padding="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/menuDonors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Donors"
            android:padding="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_margin="12dp"/>
        <TextView
            android:id="@+id/menuCallStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Status"
            android:padding="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />
        <TextView
            android:id="@+id/menuLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="16sp"
            android:padding="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />



    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
